# ===========================================
# Learning Agent 环境变量配置
# 复制此文件为 .env 并填入实际值
# ===========================================

# ---------- 文心一言 API 配置 ----------
# API Key (必填)
# 获取方式:
#   1. 访问 https://aistudio.baidu.com/ 并登录百度账号
#   2. 点击右上角头像 -> 访问令牌，或直接访问 https://aistudio.baidu.com/account/accessToken
#   3. 点击「查看」获取 Access Token
WENXIN_API_KEY=your_wenxin_api_key_here

# API 基础 URL (可选，默认使用百度 AI Studio)
WENXIN_BASE_URL=https://aistudio.baidu.com/llm/lmapi/v3

# 模型名称 (可选)
# 支持模型: ernie-4.5-turbo-vl (默认,支持图像) | ernie-4.5-8k | ernie-4.0-turbo-8k | ernie-3.5-8k
# 更多模型: https://aistudio.baidu.com/llm/lmapi
WENXIN_MODEL=ernie-4.5-turbo-vl

# ---------- Notion MCP 配置 ----------
# Notion Integration Secret (必填，以 ntn_ 开头)
# 获取地址: https://www.notion.so/my-integrations
NOTION_MCP_TOKEN=ntn_your_notion_token_here

# Notion API 版本
NOTION_MCP_VERSION=2022-06-28

# ---------- PaddleOCR MCP 配置 ----------
# 详细文档: https://www.paddleocr.ai/main/version3.x/deployment/mcp_server.html

# 产线类型: OCR | PP-StructureV3 | PaddleOCR-VL
PADDLEOCR_MCP_PIPELINE=PP-StructureV3

# 能力来源: local | aistudio (推荐) | qianfan | self_hosted
PADDLEOCR_MCP_PPOCR_SOURCE=aistudio

# 服务 URL (aistudio/qianfan/self_hosted 模式必需)
# 从 https://aistudio.baidu.com/paddleocr/task > API 标签获取
PADDLEOCR_MCP_SERVER_URL=

# AI Studio 访问令牌 (aistudio 模式必需)
# 从 https://aistudio.baidu.com/paddleocr/task > API 标签获取
PADDLEOCR_MCP_AISTUDIO_ACCESS_TOKEN=

# 千帆平台 API Key (qianfan 模式必需)
PADDLEOCR_MCP_QIANFAN_API_KEY=

# 请求超时时间 (秒)
PADDLEOCR_MCP_TIMEOUT=120

# ---------- Agent 执行配置 ----------
# 是否使用 ReAct 模式 (true=文心一言等 | false=OpenAI/Claude等)
USE_REACT_MODE=true

# ---------- 其他配置 ----------
# MCP 配置文件路径 (可选)
MCP_CONFIG_PATH=mcp-config.jsonc
